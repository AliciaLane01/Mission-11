<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/img/book.jfif">
    <title>@ViewBag.Title</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/js/bootstrap.min.js"></script>
    <script src="~/lib/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-info text-black p-3">
                <div class="float-end">
                    <vc:cart-summary />
                </div>
    </div>
    <div class="bg-info text-black p-3 text-center">
        <span class="navbar-brand" style="font-family:'Lucida Grande'; font-size:100px">Book Store</span>
    </div>
    <div class="row m-1 p-1">
        <div class="col-2">
            <vc:category></vc:category>

            <div class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dropdown
                </button>
                <div class="dropdown-menu">
                    <a href="/admin" class="dropdown-item">Admin</a>
                    <a asp-controller="Home" asp-action="Bootstrap" class="dropdown-item">Bootstrap</a>
                </div>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-7">
            @RenderBody()
        </div>
    </div>

</body>
</html>
